<mvc:View
	controllerName="pt.com.pm.crudUI5-manageProducts.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/Products',
					sorter: {
						path: 'description',
						descending: false
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search="onSearch"
							width="auto">
						</SearchField>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column id="nameColumn">
						<Text text="{i18n>tableNameColumnTitle}"/>
					</Column>
					<Column id="groupColumn" 
						hAlign="Center"
						demandPopin="false" mergeDuplicates="true" minScreenWidth="Tablet">
						<Text text="{i18n>tableGroupColumnTitle}"/>
					</Column>
					<Column id="typeColumn"
						hAlign="Center"
						demandPopin="false" mergeDuplicates="true" minScreenWidth="Tablet">
						<Text text="{i18n>tableTypeColumnTitle}"/>
					</Column>
					<Column id="quantityColumn" hAlign="End">
						<Text text="{i18n>tableQuantityColumnTitle}"/>
					</Column>
					<Column id="amountColumn" hAlign="End">
						<Text text="{i18n>tableAmountColumnTitle}"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPress">
						<cells>
							<ObjectIdentifier
								title="{id}"
								titleActive="true"
								text="{description}"
								titlePress="onTitlePress"/>
							<ObjectIdentifier
								text="{materialGroup.id}"
								titlePress="onTitlePress"/>
							<ObjectIdentifier
								text="{materialType.id}"
								titlePress="onTitlePress"/>
							<ObjectNumber
								number="{
									path: 'quantity',
									formatter: '.formatter.numberUnit'
								}"
								unit="{unitMeasure}"/>
							<ObjectNumber
								number="{
									parts:[
										{
											path:'netValue',
											formatter: '.formatter.numberUnit'
										},{
											path:'CurrencyCode' 
									}],
									type: 'sap.ui.model.type.Currency',
									formatOptions: {
										showMeasure: true
									}
							}"
							unit="{CurrencyCode}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:shareInJamAction>
			<semantic:ShareInJamAction id="shareInJam" visible="{FLP>/isShareInJamActive}" press="onShareInJamPress"/>
		</semantic:shareInJamAction>

		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton id ="shareTile" title="{worklistView>/saveAsTileTitle}" />
		</semantic:saveAsTileAction>

	</semantic:SemanticPage>

</mvc:View>